		ПереченьСписка.Добавить("6","NATIONAL_CATALOG");                
		ПереченьСписка.Добавить("7", "OTHER");                 
		ПереченьСписка.Добавить("8", "MOY_SKLAD");                
		ПереченьСписка.Добавить("9", "SBER_MEGA_MARKET");             
		ПереченьСписка.Добавить("10", "CISLINK");              
		ПереченьСписка.Добавить("11", "AVITO");       
